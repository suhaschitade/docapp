# Docker Environment Configuration
# Patient Data Management System

# PostgreSQL Database Configuration
POSTGRES_DB=patient_management_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=RamMac@2099
POSTGRES_HOST=docapp_postgres
POSTGRES_PORT=5432

# pgAdmin Configuration
PGADMIN_EMAIL=admin@docapp.com
PGADMIN_PASSWORD=admin123

# Application Configuration
JWT_SECRET_KEY=YourSuperSecretKeyForJWTTokenGeneration123456789
JWT_ISSUER=PatientManagementApi
JWT_AUDIENCE=PatientManagementApp
JWT_EXPIRY_MINUTES=60

# Network Configuration
POSTGRES_EXTERNAL_PORT=5432
PGADMIN_EXTERNAL_PORT=8080

# Development Settings
ASPNETCORE_ENVIRONMENT=Development
DOTNET_RUNNING_IN_CONTAINER=true

# Logging Configuration
LOG_LEVEL=Information
EF_LOG_LEVEL=Information

# CORS Settings (for frontend development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,http://localhost:3001,https://localhost:3001

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=true

# Docker Volume Names
POSTGRES_VOLUME_NAME=postgres_data
PGADMIN_VOLUME_NAME=pgadmin_data

# Container Names
POSTGRES_CONTAINER_NAME=docapp_postgres
PGADMIN_CONTAINER_NAME=docapp_pgadmin

# Network Configuration
DOCKER_NETWORK_NAME=docapp_network
